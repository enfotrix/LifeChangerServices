<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray"
    android:orientation="vertical"
    tools:context=".Activities.ActivityOtp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:cardElevation="@dimen/_3sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OTP Varification"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textSize="@dimen/_18sdp">
            </TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/otpsent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/veri"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/roboto"
                android:text="Enter One Time OTP (code) sent on"
                android:textSize="@dimen/_12sdp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/text_otpNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/otpsent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/_16ssp"
                android:textStyle="italic" />

            <LinearLayout
                android:id="@+id/optlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_otpNumber"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/opt1"
                    android:layout_width="48dp"
                    android:layout_height="46dp"
                    android:background="@drawable/otp_numberbg"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="Labelfor" />

                <EditText
                    android:id="@+id/opt2"
                    android:layout_width="48dp"
                    android:layout_height="46dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/otp_numberbg"
                    android:gravity="center"
                    android:imeOptions="actionNext"

                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="Labelfor" />

                <EditText
                    android:id="@+id/opt3"
                    android:layout_width="48dp"
                    android:layout_height="46dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/otp_numberbg"

                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="Labelfor" />

                <EditText
                    android:id="@+id/opt4"
                    android:layout_width="48dp"
                    android:layout_height="46dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/otp_numberbg"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"

                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="Labelfor" />

                <EditText
                    android:id="@+id/opt5"
                    android:layout_width="48dp"
                    android:layout_height="46dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/otp_numberbg"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"

                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="Labelfor" />

                <EditText
                    android:id="@+id/opt6"
                    android:layout_width="48dp"
                    android:layout_height="46dp"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/otp_numberbg"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"

                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="Labelfor" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/optlay"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:background="@color/teal_700"
                android:text="Verify Code"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:id="@+id/notrec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_otp"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:fontFamily="@font/roboto"
                android:text="Did not receive the OTP ?"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_otp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_toRightOf="@+id/notrec">

                <TextView
                    android:id="@+id/resendotp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/resend_otp_again"
                    android:textColor="@drawable/clickable_text_back"
                    android:textColorHint="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/countTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/resend_otp_again"
                    android:textColor="@drawable/clickable_text_back"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </FrameLayout>

            <com.github.ybq.android.spinkit.SpinKitView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/progressBa_splash"
                style="@style/SpinKitView.Wave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/notrec"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_15sdp"
                app:SpinKit_Color="@color/black_m" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>